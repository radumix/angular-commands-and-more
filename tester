const { test, expect } = require('@playwright/test');

test('select first row and click div in second column', async ({ page }) => {
  // Go to the page where your table is located
  await page.goto('your-url-here');

  // Locate the first row and the div inside the second column
  const firstRowDivInSecondColumn = await page.locator('table tbody tr:first-child td:nth-child(2) div.lt-image');

  // Click the div element inside the second column of the first row
  await firstRowDivInSecondColumn.click();

  // Add further test steps or assertions here as needed
});
