import { test, expect, chromium } from '@playwright/test';

test('Ensure no autofill or saved passwords', async () => {
  // Launch the browser with arguments to disable autofill and password saving
  const browser = await chromium.launch({
    headless: false,  // Set to true for headless mode
    args: [
      '--disable-save-password',  // Disable saving passwords
      '--disable-autofill',        // Disable autofill
      '--incognito',               // Use incognito mode to prevent data sharing
    ],
  });

  // Create a fresh, isolated context for incognito-like behavior
  const context = await browser.newContext();

  // Open a new page in this isolated context
  const page = await context.newPage();
  
  // Navigate to the app or website
  await page.goto('https://example.com'); // Replace with your app URL
  
  // Check if autofill is disabled: ensure no username or password is auto-filled
  const usernameInput = await page.$('input[name="username"]'); // Adjust the selector as needed
  const passwordInput = await page.$('input[name="password"]'); // Adjust the selector as needed

  const usernameValue = await usernameInput?.inputValue();
  const passwordValue = await passwordInput?.inputValue();

  // Assert that the username and password fields are empty (i.e., not auto-filled)
  expect(usernameValue).toBe('');
  expect(passwordValue).toBe('');

  // Close the browser after the test
  await browser.close();
});





