await page.locator('xpath=//*[@id="grdTaskList"]/div/kendo-grid-list/div/div[1]/table/tbody/tr[1]/td[2]').waitFor();
const text = await page.locator('xpath=//*[@id="grdTaskList"]/div/kendo-grid-list/div/div[1]/table/tbody/tr[1]/td[2]').textContent();
console.log(text);  // You can then use the text for further assertions or processing


// Locate the value in the first column of the first row
const firstColumnValue = await page.locator('table tbody tr:first-child td:nth-child(1)').textContent();

// Log or use the value before clicking
console.log('First column value in the first row:', firstColumnValue);

// Locate the div inside the second column of the first row
const firstRowDivInSecondColumn = await page.locator('table tbody tr:first-child td:nth-child(2) div.lt-image');

// Perform the click action on the div in the second column
await firstRowDivInSecondColumn.click();
